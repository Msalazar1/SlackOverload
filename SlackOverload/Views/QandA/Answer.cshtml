@model Questions
@{
	ViewData["Title"] = "Answer";
}

<h1>@ViewBag.PageName:</h1>

<form method="post" action="/QandA/SaveAnswer">
	<table style="border: 0px">
		<tr>
			<td><label name="title" title="Title" value="title">Title:</label></td>
			<td><input type="text" name="title" value="@Model?.Title" /></td>
		</tr>
		<tr>
			<td><label name="details" title="Details" value="details">Question:</label></td>
			<td><textarea name="details">@Model?.Details</textarea></td>
		</tr>
		<tr>
			<td><label name="category" title="Category" value="category">Category:</label></td>
			<td><input type="text" name="category" value="@Model?.Category" /></td>
		</tr>
		<tr>
			<td><label name="tags" title="Tags" value="tags">Tags:</label></td>
			<td><input type="text" name="tags" value="@Model?.Tags" /></td>
		</tr>
	</table>
	<input type="hidden" name="username" value="testuser" />
	<input type="hidden" name="id" value="@Model?.id" />
	<br />
	<input type="submit" value="Save" />
</form>