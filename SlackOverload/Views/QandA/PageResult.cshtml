@model Questions
@{
	ViewData["Title"] = Model.Title;
	List<Answers> answers = Answers.Read(Model.id);
}

<h3>@Model.Title:</h3>
<p>@Model.Details</p>
<table>
	<tr>
		<td>Posted:</td>
		<td>@Model.Username @Model.Posted</td>
	</tr>
	<tr>
		<td>Category:</td>
		<td>@Model.Category</td>
	</tr>
	<tr>
		<td>Tags:</td>
		<td>@Model.Tags</td>
	</tr>
	<tr>
		<td>Status:</td>
		<td>
			@if (Model.Status == 0)
			{
				<text>Open</text>
			}
			else
			{
				<text>Closed</text>
			}
		</td>
	</tr>
</table>
<a href="/QandA/EditQuestion?id=@Model.id">Edit Question</a>
<hr />
@if (answers.Count != 0)
{
	<h3>Answers:</h3>
	foreach (Answers answer in answers)
	{
		<p>@answer.Details</p>
		<a href="/QandA/Upvote?id=@answer.id">I like it!</a> <a href="/QandA/Downvote?id=@answer.id">I dislike it!</a>
		<table>
			<tr>
				<td>Posted:</td>
				<td>@answer.Username @answer.Posted</td>
			</tr>
			<tr>
				<td>Upvotes:</td>
				<td>@answer.Upvotes</td>
			</tr>
		</table>
        <a href="/QandA/EditAnswer?id=@answer.id">Edit Answer</a>
		<hr />
	}
}
@if(Model.Status == 0)
{
	<a href="/QandA/Answer?questionID=@Model.id">Add an answer</a>
}