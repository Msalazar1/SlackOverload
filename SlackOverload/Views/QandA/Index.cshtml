@model List<Questions>
@{
	ViewData["Title"] = "SlackOverload - Questions";
}

<h1>Welcome to Dev.Build Slack Overload Question Forum</h1>
<br />
<b style="color:chartreuse">@ViewBag.Message</b>
<form method="get" action="/QandA">
	<label name="search" value="Search">Search:</label>
	<select name="scope">
		<option>Questions</option>
		<option>Answers</option>
		<option value="Q/A">Questions and Answers</option>
	</select>
	<select name="field">
		<option>Details</option>
		<option>Title</option>
		<option>Category</option>
		<option>Username</option>
		<option>Tags</option>
		<option>All</option>
	</select>
	<input type="text" name="search" />
	<input type="submit" value="Go" />
</form>
<br />
<h2>Check out our questions:</h2>
<ul>
	@foreach (Questions question in Model)
	{
		<li><a href=" /QandA/PageResult?id=@question.id">@question.Title</a></li>
	}
</ul>
<a href="/QandA/Question/">Add New Question</a>